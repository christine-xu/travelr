<!doctype html>
<html ng-app="travelr">
<head>
    <title>travelr</title>
    <link type="text/css" rel="stylesheet" href="/public/css/styles.css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.4/angular.min.js"></script>
    <script src="/public/js/script.js"></script>
    <script src="/public/js/controllers/main.js"></script>
    <script src="/public/js/services/posts.js"></script>
    <script src="/public/js/core.js"></script>
</head>
<body ng-controller="mainController">
    <div class="container">
        <div id="welcome">
            <h1>Hello, <%= user.facebook.name %>.</h1>
            <a href="#" class="action-button" id="new-post">New Post</a>
            <a href="/logout" class="action-button">Logout</a>
        </div>
        <div id="create-post">
            <div class="choice">
                <h2>Destination</h2>
                <input type="text" name="destination" ng-model="formData.destination">
            </div>
            <div class="choice">
                <h2>Date</h2>
                <input type="date" name="date" ng-model="formData.date">
            </div>
            <div class="choice">
                <h2>Comments</h2>
                <input type="text" name="comments" ng-model="formData.comments">
            </div>
        <a href="#" class="action-button" ng-click="createPost()">Submit</a>
        </div>
        <div id="post-list">
            <div class="single-post" ng-repeat="post in posts">
                <div class="post-block">
                    <h2>Who</h2>
                    <p>{{post.name}}</p>
                </div>
                <div class="post-block">
                    <h2>Where</h2>
                    <p>{{post.destination}}</p>
                </div>
                <div class="post-block">
                    <h2>When</h2>
                    <p>{{post.date}}</p>
                </div>
                <div class="post-block">
                    <h2>What</h2>
                    <p>{{post.comments}}</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
